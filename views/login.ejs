<!DOCTYPE html>
<html lang="en">

<head>
  <title>Login</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/login-form.css" />
</head>

<body>
  <%- include('partials/_header') %>

    <div class="login-signup-form">
      <h1>Login</h1>
      <form action="/users/login" method="POST" id="login-form" class="login-form">
        <div class="login-form_wrapper">
          <input type="email" id="email" name="email" placeholder="Enter a valid email address" />
        </div>

        <div class="login-form_wrapper">
          <input type="password" id="password" name="password" placeholder="Enter password" />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
</body>

</html>