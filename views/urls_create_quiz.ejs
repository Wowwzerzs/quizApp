<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/login-form.css" />
    <link rel="stylesheet" href="/styles/question.css" />
    <link rel="stylesheet" href="/styles/quiz.css" />
    <link rel="stylesheet" href="/styles/create-quiz.css" />
  </head>

  <body>
    <%- include('partials/_header') %>
    <main id="main-content">
      <section class="create-quiz-container">
        <h1>Create quiz</h1>
        <Form method="POST" action="/users/create-quiz">
          <div class="question-container">
            <h1>Question 1</h1>
            <div class="create-question">
              <input
                type="text"
                name="question-one"
                placeholder="create a question"
              />
            </div>

            <label>
              <input
                id="checkbox-one-one"
                type="checkbox"
                name="answerA"
                value="true"
              />
              <input type="text" name="answerA" placeholder="Enter answer A" />
            </label>

            <label>
              <input
                id="checkbox-one-one"
                type="checkbox"
                name="answerB"
                value="true"
              />
              <input type="text" name="answerB" placeholder="Enter answer B" />
            </label>

            <label>
              <input
                id="checkbox-one-one"
                type="checkbox"
                name="answerB"
                value="true"
              />
              <input type="text" name="answerB" placeholder="Enter answer C" />
            </label>
          </div>

          <button class="btn-create-quiz">submit</button>
        </Form>
      </section>
    </main>

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script src="/scripts/app.js"></script>
  </body>
</html>
